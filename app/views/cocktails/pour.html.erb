<div class="container bigger-container">
  <div class="d-flex justify-content-center align-items-center my-4">
    <h1>Update a cocktail</h1>
  </div>

  <div class="row form-div">
    <% @cocktails.each do |tail| %>
      <div class="col-12">
        <%= link_to cocktail_path(tail) do %>
            <div class="card-product my-2">
              <img src='<%= cl_image_path tail.photo.key %>' />
              <div class="card-product-infos">
                <h2><%= tail.name %></h2>
              </div>
            </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>