
<div class="banner banner-tail" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url('<%= cl_image_path @cocktail.photo.key %>'); object-fit: cover;">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <div class="ingredients-show-div m-4 p-4 rounded shadow-sm">
        <div>
          <h3>Ingredients</h3>
          <div class="py-2">
            <% @doses.each do |dose| %>
              <p><%= dose.description %> <%= dose.ingredient.name %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>